extends layout-stats

block content
  p
  .container-fluid
    .row-fluid
      .span12
        form#projects.getStats
          label(for='project') Project
          select(name='project')
            //- option All
          label(for='from') From
          input#from(type='text', name='from')
          label(for='to') To
          input#to(type='text', name='to')
          input#team(type='checkbox', name='team', value='team', checked='checked')
          label(for='team') Include issues from team
          input#getStats(type='submit', value="Get reaction stats")
          input#closed(type='checkbox', name='closed', value='closed', checked='checked')
          label(for='closed') Include closed issues
          input#assignedToTeam(type='checkbox', name='assignedToTeam', value='assignedToTeam', checked='checked')
          label(for='assignedToTeam') Only issues assigned to team
          input#getIssuesStats(type='submit', value="Get issues stats")
        a.reset(href='javascript:dc.filterAll();dc.redrawAll();') reset all

    #stats
      .row-fluid
        .span12
          #graph
            h2 Moyenne (h)
            div#less1 Moins de 1h
            div#less2 Moins de 2h
            div#less3 Moins de 3h
            div#more Plus de 3h
            div#total Totale
          #easy-as-pie-chart
      .row-fluid
        .span12
          #statsReport
      .row-fluid
        .span12
          #content
            table#extract
              thead
                tr
                  th nom sous projet
                  th Num Tache
                  th Nom
                  th Date demande
                  th Demande faite par
                  th(colspan=2) delai 1er post
                  th date 1er post
                  th user 1er post
                  th(colspan=2) delai "à valider"
                  th date "à valider"
                  th(colspan=2) delai "à livrer"
                  th date "à livrer"
                  th(colspan=2) delai "livré"
                  th date "livré"
                  th(colspan=2) delai "fermé"
                  th date "fermé"
                  th(colspan=2) delai "rejeté"
                  th date "rejeté"
                  th temps passé
                tbody
  #volumeByPriorityChart.donut
    .reset(style='display: none;') Current filter:
      span.filter
      a.reset(href='javascript:volumeByPriorityChart.filterAll();dc.redrawAll();', style='display: none;')  reset
  #volumeByAssignmentChart.donut
    .reset(style='display: none;') Current filter:
      span.filter
      a.reset(href='javascript:volumeByAssignmentChart.filterAll();dc.redrawAll();', style='display: none;')  reset
  #volumeByStatusChart.donut
    .reset(style='display: none;') Current filter:
      span.filter
      a.reset(href='javascript:volumeByStatusChart.filterAll();dc.redrawAll();', style='display: none;')  reset
  #issuesTable
    .header
      span id
      span time_entriesTotal
      span estimated_hours
      span done_ratio
      span priority
      span assigned_to
      span status
